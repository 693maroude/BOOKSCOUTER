extends layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-default
          .panel-heading
            span.glyphicon.glyphicon-lock
            |  #{title}
          .panel-body
            form.form-horizontal(role='form', enctype='multipart/form-data', method='POST', action='/books/uploads')
              .form-group
                label.col-sm-2.control-label(for='File')
                  | File:
                .col-sm-10
                  input#File.form-control(name='file', type='file')
              .form-group.last
                .col-sm-offset-3.col-sm-9
                  button.btn.btn-success.btn-sm(type='submit')
                    | Submit
